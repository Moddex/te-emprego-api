{
    "compilerOptions": {
      "target": "es2017",
      "allowSyntheticDefaultImports": false,
      "baseUrl": "./",
      "paths": {
        "@app/*": ["src/*"],
        "@config/*": ["src/config/*"],
        "@helpers/*": ["src/helpers/*"],
        "@models/*": ["src/models/*"],
        "@controllers/*": ["src/controllers/*"],
        "@services/*": ["src/services/*"]
      }
    },
    "exclude": ["node_modules", "dist"]
  }